@
text
@/*!
 *
 * \class StEEmcAnlSplitHitMorhac_t
 * \author Stephen Gliske <sgliske@@anl.gov>
 *
 * Split hits based on peak finding algorith of Miroslav Morhac, as
 * provided in TSpectrum.
 *
 */

#ifndef _EEMC_ANL_SPLIT_HIT_MORHAC_H
#define _EEMC_ANL_SPLIT_HIT_MORHAC_H

#include <TSpectrum.h>

#include "Stypes.h"
#include "StRoot/StEEmcUtil/EEmcGeom/EEmcGeomDefs.h"
#include "StEEmcAnlSplitHitAlgo.h"
#include "AnlEMPoint.h"

class StEEmcAnlHit_t;

// the class
class StEEmcAnlSplitHitMorhac_t : public StEEmcAnlSplitHitAlgo_t {
 public:
   /// Construtor, deconstructor
   StEEmcAnlSplitHitMorhac_t();
   virtual ~StEEmcAnlSplitHitMorhac_t();

   // default copy constructor, eq. op. OK

   /// Initialize
   virtual Int_t Init();

   /// Find all the hits
   virtual Int_t splitHit( const StEEmcAnlHit_t& hit, Bool_t& doSplit, Bool_t& doInvalidate, AnlEMPoint_t& point1, AnlEMPoint_t& point2 );

   void setRemoveBkg( Bool_t val ){ mRemoveBkg = val; };
   void setDoMarkov( Bool_t val ){ mDoMarkov = val; };
   void setMaxNumPoints( Int_t val ){ mMaxNumPoints = val; };
   void setMinNumStrips( Int_t val ){ mMinNumStrips = val; };
   void setSideStrips( Int_t val ){ mSideStrips = val; };
   void setExtraSideStrips( Int_t val ){ mExtraSideStrips = val; };
   void setNumDeconIters( Int_t val ){ mNumDeconIters = val; };
   void setAverWindow( Int_t val ){ mAverWindow = val; };
   void setNumToSum( Int_t val ){ mNumToSum = val; };
   void setResolution( Float_t val ){ mResolution = val; };
   void setStartWidth( Float_t val ){ mStartWidth = val; };
   void setStopWidth( Float_t val ){ mStopWidth = val; };
   void setWidthStepSize( Float_t val ){ mWidthStepSize = val; };
   void setThreshold( Float_t val ){ mThreshold = val; };

 protected:
   TSpectrum *peakFinderPtr;

   Bool_t mDoMarkov;
   Bool_t mRemoveBkg;
   Int_t mMaxNumPoints;
   Int_t mMinNumStrips;
   Int_t mSideStrips;
   Int_t mExtraSideStrips;
   Int_t mNumDeconIters;
   Int_t mAverWindow;
   Int_t mNumToSum;
   Float_t mResolution;
   Float_t mStartWidth;
   Float_t mStopWidth;
   Float_t mWidthStepSize;
   Float_t mThreshold;

   enum { kMaxNumLayers = 4 };
   Float_t mStripEnergyArray[kMaxNumLayers][kEEmcNumStrips];
   Float_t mDeconvoluted[kEEmcNumStrips];

 private:
   ClassDef( StEEmcAnlSplitHitMorhac_t, 1 );
};

#endif

