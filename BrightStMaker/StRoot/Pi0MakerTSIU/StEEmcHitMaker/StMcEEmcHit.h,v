@/*!
 *
 * \class StMcEEmcHit_t
 * \author Stephen Gliske <sgliske@@anl.gov>
 *
 * StEEmcHit_t plus info about tracks and their relative constribution to this hit.
 *
 * Note: default copy constructors and equal operators are used.
*/

#ifndef _ST_MC_EEMC_HIT_H_
#define _ST_MC_EEMC_HIT_H_

#include <vector>
#include "StEEmcHit.h"
#include "StRoot/StEEmcPool/StEEmcResponseTreeMaker/StMcEmcElementResponse.h"

// forward declaration
class StMcEEmcHit_t;

// containers
typedef std::vector< StMcEEmcHit_t > StMcEEmcHitVec_t;

/// The class
class StMcEEmcHit_t : public StEEmcHit_t, public StMcEmcElementResponse_t {
 public:
   // constructor
   StMcEEmcHit_t() : StEEmcHit_t(), StMcEmcElementResponse_t() { /* */ };

   StMcEEmcHit_t( const StEEmcHit_t& hit ) : StEEmcHit_t( hit ), StMcEmcElementResponse_t() { /* */ };

   StMcEEmcHit_t( const StMcEEmcHit_t& mcHit ) :
      StEEmcHit_t( *static_cast< const StEEmcHit_t* >( &mcHit ) ),
      StMcEmcElementResponse_t( *static_cast< const StMcEmcElementResponse_t* >( &mcHit ) )
         { /* */ };

   ~StMcEEmcHit_t(){ /* */ };

 protected:

 private:
   /// Make class available to root
   ClassDef(StMcEEmcHit_t,1);   // Class to store McEEmc Hits

};

std::ostream &operator<<( std::ostream &out, const StMcEEmcHit_t &mcHit );

