text
@/*!
 * \class TowerClusterFinderMinesweeper_t
 * \author Stephen Gliske <sgliske@@anl.gov>
 *
 * Implementation of Jan Balewski's minesweeper algorithm.  Generally
 * follows the code the description given at
 *
 * http://www.star.bnl.gov/public/eemc/simulations/MineSweeper/
 *
 * except that the shared towers membership is weighted according to
 * the energy of the seed towers.
 *
 * The method has been implemented in other classes previously.  This follows most closely 
 * 
 * offline/users/aliceb/StRoot/StEEmcPool/StEEmcIUPi0/StEEmcIUClusterMaker.cxx?rev=1.1
 *
 * See also
 *
 * http://drupal.star.bnl.gov/STAR/blog/sgliske/2011/jun/06/summary-eemc-code
 *
 * Hopefully this implementation is generic enough to that any
 * other classes wanting to use this algorithm can use this
 * implementation rather than having code duplicating the same
 * algorithm.
*/

#ifndef _ST_TOWER_CLUSTER_FINDER_MINESWEEPER_H_
#define _ST_TOWER_CLUSTER_FINDER_MINESWEEPER_H_

#include <Rtypes.h>
#include <TMath.h>
#include <TArrayS.h>
#include <TArrayF.h>

#include "StRoot/St_base/StMessMgr.h"
#include "StRoot/St_base/Stypes.h"

#include "StRoot/StEEmcUtil/EEmcGeom/EEmcGeomDefs.h"

#include "StEEmcTowerClusterFinder.h"
#include "StSimpleCluster.h"
#include "StFinderAlg.h"

// the class
class StEEmcTowerClusterFinderMinesweeper_t : public StEEmcTowerClusterFinder_t {

 public:
   StEEmcTowerClusterFinderMinesweeper_t() : StEEmcTowerClusterFinder_t(), mAllowAdjacent(0), mSeedEnergyThres(2.0) { mIsReady = 1; };
   virtual ~StEEmcTowerClusterFinderMinesweeper_t() { /* */ };

   /// clear things before doing the finding for the next event,
   /// but there is really nothing to clear.
   virtual void clear(){ /* */ };

   /// find some clusters
   virtual Int_t find( ETowEnergy_t& towEnergy, StSimpleClusterVec_t& cluster );

   /// modifiers
   void setSeedEnergyThreshold( Float_t thres ){ mSeedEnergyThres = thres; };
   void setAllowAdjacent( Bool_t doAllow = 1 ){ mAllowAdjacent = doAllow; };


 protected:

   Bool_t mAllowAdjacent;
   Float_t mSeedEnergyThres;
   Float_t mSumOfNeighboringSeeds[ kEEmcNumTowers ];

 private:
   ClassDef( StEEmcTowerClusterFinderMinesweeper_t, 1 );

};

#endif

