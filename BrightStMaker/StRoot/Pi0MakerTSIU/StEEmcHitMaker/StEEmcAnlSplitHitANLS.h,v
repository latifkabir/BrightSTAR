@/*!
 *
 * \class StEEmcAnlSplitHitANLS_t
 * \author Stephen Gliske <sgliske@@anl.gov>
 *
 * Split hits based on cluster finder ANLS.
 *
 */

#ifndef _EEMC_ANL_SPLIT_HIT_ANLS_H
#define _EEMC_ANL_SPLIT_HIT_ANLS_H

#include "Stypes.h"
#include "AnlEMPoint.h"
#include "StEEmcAnlSplitHitAlgo.h"
class StEEmcAnlHit_t;
class StEEmcStripClusterFinderANLS_t;

#include "StRoot/StEEmcUtil/EEmcGeom/EEmcGeomDefs.h"

// the class
class StEEmcAnlSplitHitANLS_t : public StEEmcAnlSplitHitAlgo_t {
 public:
   /// Construtor, deconstructor
   StEEmcAnlSplitHitANLS_t( StEEmcStripClusterFinderANLS_t* clusterFinderPtr = 0 );
   virtual ~StEEmcAnlSplitHitANLS_t();

   // default copy constructor, eq. op. OK

   /// Initialize
   virtual Int_t Init();

   /// Find all the hits
   virtual Int_t splitHit( const StEEmcAnlHit_t& hit, Bool_t& doSplit, Bool_t& doInvalidate, AnlEMPoint_t& point1, AnlEMPoint_t& point2 );

   /// Clear for next event
   virtual void Clear(Option_t *opts="");

 protected:
   StEEmcStripClusterFinderANLS_t* mClusterFinderPtr;

   Int_t mNumStripsPerSectorU[kEEmcNumSectors], mNumStripsPerSectorV[kEEmcNumSectors];
   Float_t mEu[kEEmcNumSectors], mEv[kEEmcNumSectors], mEtot[kEEmcNumSectors];

 private:
   ClassDef( StEEmcAnlSplitHitANLS_t, 1 );
};

#endif

